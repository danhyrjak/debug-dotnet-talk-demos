@model DebugOnProdF452.Models.Registration

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-12">
        <h1>Register your interest</h1>

        <form method="post" action="/Home/RegisterInterest">
            <input type="text" name="Name" required placeholder="Whats your name" />
            <input type="email" name="Email" required placeholder="Whats your email" />
            <input type="text" id="age" name="AgeInYears" required placeholder="Whats your age in years" />
            <button type="submit">Send</button>
        </form>
    </div>
</div>